{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json",
        "tsconfigRootDir": "." // This is important
    },
    "plugins": [
        "react",
        "react-hooks", 
        "@typescript-eslint", 
        "prettier"
    ],
    "rules": {
        "import/no-unresolved": "error",
        "react/jsx-filename-extension": [0],
        "react/jsx-props-no-spreading": [0],
        "import/extensions": "off"
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    },
    "root": true
}
